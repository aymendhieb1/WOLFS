<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.wolfs.controllers.CheckoutVolController">
    <TabPane prefWidth="1000.0" prefHeight="600.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

        <!-- Tab for Reservations Form and Table -->
        <Tab text="Reservations">
            <ScrollPane fitToWidth="true" fitToHeight="true">
                <content>
                    <VBox layoutX="14.0" layoutY="14.0" spacing="10.0">
                        <HBox spacing="20.0">
                            <VBox spacing="10.0" prefWidth="250.0">
                                <Label text="Ajouter une RÃ©servation de Vol" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                                <HBox spacing="10.0">
                                    <Label text="Flight ID:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <ComboBox fx:id="cbFlightID" prefWidth="150.0" />
                                </HBox>
                                <HBox spacing="10.0">
                                    <Label text="Aircraft:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <TextField fx:id="tfAircraft" prefWidth="150.0" editable="false" />
                                </HBox>
                                <HBox spacing="10.0">
                                    <Label text="Flight Crew:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <TextField fx:id="tfFlightCrew" prefWidth="150.0" editable="false" />
                                </HBox>
                                <HBox spacing="10.0">
                                    <Label text="Gate:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <TextField fx:id="tfGate" prefWidth="150.0" editable="false" />
                                </HBox>
                                <HBox spacing="10.0">
                                    <VBox spacing="5.0" prefWidth="100.0" alignment="CENTER_RIGHT">
                                        <Label text="Reservation" />
                                        <Label text="Date/Time:" />
                                    </VBox>
                                    <VBox spacing="5.0">
                                        <DatePicker fx:id="dpReservationDate" prefWidth="150.0" />
                                        <HBox spacing="5.0">
                                            <TextField fx:id="tfReservationTime" promptText="HH:MM" prefWidth="150.0" />
                                        </HBox>
                                    </VBox>
                                </HBox>
                                <HBox spacing="10.0">
                                    <Label text="Total Passengers:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <ComboBox fx:id="cbTotalPassengers" prefWidth="150.0" />
                                </HBox>
                                <HBox spacing="10.0">
                                    <Label text="Reservation Status:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <ComboBox fx:id="cbReservationStatus" prefWidth="150.0" />
                                </HBox>
                                <HBox spacing="10.0">
                                    <Label text="Total Price:" prefWidth="100.0" alignment="CENTER_RIGHT" />
                                    <TextField fx:id="tfTotalPrice" prefWidth="150.0" editable="false" />
                                </HBox>
                                <VBox spacing="10.0" alignment="CENTER">
                                    <Button text="Ajouter" onAction="#addCheckoutVol" prefWidth="100.0" />
                                    <Button text="Supprimer" onAction="#deleteCheckoutVol" prefWidth="100.0" />
                                </VBox>
                            </VBox>

                            <TableView fx:id="tableViewCheckoutVols" prefHeight="500.0" HBox.hgrow="ALWAYS">
                                <columns>
                                    <TableColumn fx:id="colCheckoutID" text="Checkout ID" prefWidth="80.0" />
                                    <TableColumn fx:id="colFlightID" text="Flight ID" prefWidth="70.0" />
                                    <TableColumn fx:id="colAircraft" text="Aircraft" prefWidth="120.0" />
                                    <TableColumn fx:id="colFlightCrew" text="Flight Crew" prefWidth="80.0" />
                                    <TableColumn fx:id="colGate" text="Gate" prefWidth="70.0" />
                                    <TableColumn fx:id="colReservationDate" text="Reservation Date/Time" prefWidth="150.0" />
                                    <TableColumn fx:id="colTotalPassengers" text="Passengers" prefWidth="80.0" />
                                    <TableColumn fx:id="colReservationStatus" text="Status" prefWidth="100.0" />
                                    <TableColumn fx:id="colTotalPrice" text="Total Price" prefWidth="80.0" />
                                    <TableColumn fx:id="colModify" text="Actions" prefWidth="80.0" />
                                </columns>
                            </TableView>







                        </HBox>
                        <TableView fx:id="tblExchangeRates" prefWidth="600.0" prefHeight="300.0">
                            <columns>
                                <TableColumn fx:id="colCurrency" text="Devise" prefWidth="150.0" />
                                <TableColumn fx:id="colExchangeRate" text="Taux" prefWidth="150.0" />
                            </columns>
                            <Button fx:id="btnRefreshRate" text="Actualiser" onAction="#updateExchangeRate" />
                        </TableView>
                    </VBox>

                </content>
            </ScrollPane>
        </Tab>

        <!-- Tab for Live Aircraft Tracking Map -->
        <Tab text="Live Map">
            <VBox spacing="5.0">
                <Label text="Live Aircraft Tracking Map" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <WebView fx:id="mapView" prefHeight="800.0" />

            </VBox>
        </Tab>



    </TabPane>
</AnchorPane>
